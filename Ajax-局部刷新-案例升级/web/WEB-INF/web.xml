<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index_2.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.lujun61.ajax.controller.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateSearchServlet</servlet-name>
        <servlet-class>com.lujun61.ajax.controller.UpdateSearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateSearchServlet</servlet-name>
        <url-pattern>/updateSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
</web-app>